  <label
    x-text="filename ? `Arquivo selecionado: ${filename}` : 'Selecione o arquivo'"
    class="inline-block rounded border border-indigo-600 px-12 py-3 text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring active:bg-indigo-500"
    for="{{ id }}">
  </label>
  <input hidden type="file" id="{{ id }}" {{ $props.serializeExcept(['id']) }} @input="if($event.target.files[0]) filename = $event.target.files[0].name">
